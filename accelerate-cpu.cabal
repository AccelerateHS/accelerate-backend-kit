  Build-depends:        base  == 4.*, containers >= 0.3, array, split,
                        test-framework, process, unix, 
                        mtl, pretty, prettyclass, GenericPretty,
                        accelerate, accelerate-backend-kit, 
                        OpenCL, 
                        classsupport-b629

  ghc-options:          -Wall
